
AR = ar

include ../../build/make.inc

#-------------------------------------------------------------------------------
# Suffix Rules
#-------------------------------------------------------------------------------
.SUFFIXES: .o .f
.f.o:
	$(F77) $(F77_OPTS) -c $<

#-------------------------------------------------------------------------------
# File dependencies
#-------------------------------------------------------------------------------
SRC = lbfgsb.f blas.f linpack.f timer.f

OBJ = $(SRC:.f=.o)

liblbfgs:	$(OBJ)
	$(AR) -rc liblbfgs.a $(OBJ)

clean:
	rm -f *.o *.mod *~ *.a ifc* *.gcno gmon.out

