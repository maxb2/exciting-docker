	rm -f *.o *.mod *.f90 *.F90 exciting

cleanlibs:
	rm -f *.a
	rm -rf lib finclude
	-cd ../../src/libXC/ && make clean
	-cd ../../src/FoX && make clean
	-cd ../../src/leblaiklib && make clean
	-cd ../../src/Lbfgsb.3.0 && make clean
